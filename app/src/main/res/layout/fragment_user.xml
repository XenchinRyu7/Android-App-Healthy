<!-- fragment_user.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ui.user.UserFragment">

    <ImageView
        android:id="@+id/image_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon_user"
        android:contentDescription="Image User"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/text_user_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/image_user"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/text_user_name_label"
        app:layout_constraintStart_toStartOf="@+id/text_user_name_label"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/text_user_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/text_user_name"
        app:layout_constraintStart_toStartOf="@+id/text_user_name_label"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/text_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/text_user_email_label"
        app:layout_constraintStart_toStartOf="@+id/text_user_name_label"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/text_user_number_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO Handphone"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/text_user_email"
        app:layout_constraintStart_toStartOf="@+id/text_user_name_label"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/text_user_number_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/text_user_number_phone_label"
        app:layout_constraintStart_toStartOf="@+id/text_user_name_label"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
